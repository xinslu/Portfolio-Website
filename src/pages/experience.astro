---
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "@layouts/Layout.astro";
import type { MarkdownInstance } from "astro";
import type { Frontmatter } from "src/types";

const experiences = await Astro.glob<MarkdownInstance>("../assets/experiences.md");
const { frontmatter, Content } = experiences[0];

---
<style is:global>
    .highlight {
       color: rgba(var(--color-accent),var(--tw-text-opacity));
       font-weight: bold;
    }
</style>

<Layout title="Experiences | Kinshuk Phalke">
    <Header activeNav="experience" />
    <Breadcrumbs />
    <main id="main-content">
        <section id="about" class="mb-28 prose max-w-3xl prose-img:border-0 text-justify">
            <h1 className="text-2xl sm:text-3xl tracking-wider">Experience</h1>
                <div className="col-md-9 pe-5 text-justify">
                <Content />
            </div>
        </section>
    </main>
    <Footer />
</Layout>

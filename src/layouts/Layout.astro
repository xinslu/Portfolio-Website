---
import "../styles/base.css";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";

export interface Props {
  title?: string;
}
const {
  title = "",
  activeTab= "",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>{title} | Kinshuk Phalke</title>
    <meta name="title" content=`{title} | Kinshuk Phalke` />
    <meta name="description" content="Personal Website of Kinshuk Phalke, a Student at Georgia Institute of Technology" />
    <meta name="author" content="Kinshuk Phalke" />

    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body>
    <Header activeNav={activeTab} />
    <section id="content" class="prose">
        <slot />
    </section>
    <Footer />
  </body>
</html>

---
import "../styles/base.css";

export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>Kinshuk Phalke</title>
    <meta name="title" content="Kinshuk Phalke" />
    <meta name="description" content="Personal Website of Kinshuk Phalke, a Student at Georgia Institute of Technology" />
    <meta name="author" content="Kinshuk Phalke" />

    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body>
    <slot />
  </body>
</html>

---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title?: string;
}
const {
  title = "",
  activeTab= "",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>{title} | Kinshuk Phalke</title>
    <meta name="title" content=`{title} | Kinshuk Phalke` />
    <meta name="description" content="Personal Website of Kinshuk Phalke, a Student at Georgia Institute of Technology" />
    <meta name="author" content="Kinshuk Phalke" />

    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body>
    <Header activeNav={activeTab} />
    <section id="content" class="prose">
        <slot />
    </section>
    <Footer />
  </body>
</html>

<style is:global>
html {
    font-family: monospace, monospace;
}
:root,
html[data-theme="light"] {
    --color-fill: rgb(251, 254, 251);
    --color-base: rgb(40, 39, 40);
    --color-accent: rgb(0, 108, 172);
    --color-bar: rgb(230, 230, 230);
    --color-bar-hover: rgb(205, 205, 205);
}

html[data-theme="dark"] {
    --color-fill: rgb(15, 15, 15);
    --color-base: rgb(230, 230, 230);
    --color-accent: rgb(26, 217, 217);
    --color-bar: rgb(63, 75, 90);
    --color-bar-hover: rgb(89, 107, 129);
}

#sun-svg,
html[data-theme="dark"] #moon-svg {
    display: none;
}
#moon-svg,
html[data-theme="dark"] #sun-svg {
    display: block;
}


body {
    background-color: var(--color-fill);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100vh;
}

section, footer, header {
    padding-left: 1rem;
    padding-right: 1rem;
    margin-left: auto;
    margin-right: auto;
    text-align: justify;
    margin-bottom: 1rem;
    width: 100%;
    max-width: 50rem;
}

p, h1, h2, h3, ul, em, header a, span {
    color: var(--color-base);
}

em {
    opacity: 0.8;
    font-size: 1.125rem;
    padding-top: -10rem;
}

strong {
    color: var(--color-accent);
    font-weight: bold;
}

h1 {
	font-weight: 700;
    font-size: 2.7rem;
    line-height: 1;
}

p, ul {
    line-height: 1.75rem;
}

h2 {
	font-weight: 100;
    margin-top: 3rem;
    margin-bottom: -0.75rem;
    font-size: 1.75rem;
}

.prose a, .prose a:visited {
    color: var(--color-accent);
    text-decoration-color: var(--color-base);
    text-decoration-line: underline;
    text-decoration-style: dashed;
    text-underline-offset: 8px;
}

.prose a:hover {
    text-decoration-color: var(--color-accent);
}

svg {
    width: 1.5rem;
    height: 1.5rem;
    display: inline-block;
    fill: var(--color-base);
}

svg.icon-tabler {
    fill: transparent;
    stroke: var(--color-base);
}

svg:hover {
    stroke: var(--color-accent);
}

.sep {
    margin-left: auto;
    margin-right: auto;
    max-width: 50rem;
}

/* /tech */
.icons {
    display: grid;
    font-size: 40px !important;
    color: var(--color-accent);
    width: 100%;
    justify-content: center;
    align-items: center;
}

.tech-container {
    display: flex;
    flex-wrap: wrap;
    gap: 2.5rem;
    justify-content: center;
}

.row p {
    display: grid;
    justify-content: center;
    align-items: center;
}

.tech-title {
    margin-bottom: 0.5rem !important;
}
</style>
